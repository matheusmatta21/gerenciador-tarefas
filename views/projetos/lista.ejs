<%- include('../layout') %>
<div class="list-header-project">
  <form method="get" action="/projetos/lista" style="display: flex; gap: 10px; margin-bottom: 20px;">
    <input type="text" name="busca" placeholder="Buscar projeto..." value="<%= busca || '' %>" style="flex: 1; padding: 8px; border: 1px solid #ddd; border-radius: 4px;">
    <button type="submit" class="btn btn-primary">Buscar</button>
    <% if (busca) { %>
      <a href="/projetos/lista" class="btn btn-secondary">Limpar</a>
    <% } %>
  </form>
  <a href="/projetos/novo" class="btn btn-primary">+ Novo Projeto</a>
</div>

<% if (!projetos || projetos.length === 0) { %>
  <div class="empty-container">
  <p>Você não tem projetos ainda. <a href="/projetos/novo">Crie um!</a></p>
  </div>
<% } else { %>
  <div class="projetos-grid">
    <% projetos.forEach(p => { %>
      <div class="card">
        <h3><%= p.titulo %></h3>
        <p><%= p.descricao %></p>
        <p class="meta">Prazo: <%= new Date(p.prazo).toLocaleDateString('pt-BR') %></p>
        <div class="actions">
          <a href="/tarefas/<%= p.id %>/lista" class="btn btn-small">Tarefas</a>
          <a href="/projetos/<%= p.id %>/editar" class="btn btn-small">Editar</a>
          <form method="post" action="/projetos/<%= p.id %>/excluir" style="display:inline">
            <button type="submit" class="btn btn-small btn-danger" onclick="return confirm('Tem certeza?')">Excluir</button>
          </form>
        </div>
      </div>
    <% }) %>
  </div>
<% } %>